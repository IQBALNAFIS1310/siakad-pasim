@model siakad_pasim.Models.Dbs.Mahasiswa

@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<h2 class="text-2xl font-semibold mb-6">Tambah Mahasiswa</h2>

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
        <span class="block sm:inline">@TempData["Error"]</span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 5.652a1 1 0 00-1.414 0L10 8.586 7.066 5.652a1 1 0 10-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 101.414 1.414L10 11.414l2.934 2.934a1 1 0 001.414-1.414L11.414 10l2.934-2.934a1 1 0 000-1.414z" /></svg>
        </span>
    </div>
}

<div class="bg-white shadow rounded-lg p-6">
    <form asp-action="@action" method="post" class="space-y-6">
        @if (Model != null && Model.Id != 0)
        {
            @Html.HiddenFor(m => m.Id)
        }

        <div>
            <label class="block font-medium text-gray-700">NIM</label>
            <input asp-for="NIM" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="NIM" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">NIK</label>
            <input asp-for="NIK" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="NIK" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Nama</label>
            <input asp-for="Nama" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="Nama" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Program Studi</label>
            <input asp-for="ProgramStudi" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="ProgramStudi" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Tanggal Masuk</label>
            <input asp-for="TanggalMasuk" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="TanggalMasuk" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Status Mahasiswa</label>
            <select asp-for="StatusMahasiswa" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2">
                <option value="">-- Pilih --</option>
                <option value="AKTIF">AKTIF</option>
                <option value="NONAKTIF">NONAKTIF</option>
            </select>
            <span asp-validation-for="StatusMahasiswa" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Jenis Pendaftaran</label>
            <input asp-for="JenisPendaftaran" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="JenisPendaftaran" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Biaya Masuk</label>
            <input asp-for="BiayaMasuk" type="number" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="BiayaMasuk" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Jenis Kelamin</label>
            <select asp-for="JenisKelamin" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2">
                <option value="">-- Pilih --</option>
                <option value="L">Laki-laki</option>
                <option value="P">Perempuan</option>
            </select>
            <span asp-validation-for="JenisKelamin" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Tempat, Tanggal Lahir</label>
            <input asp-for="TempatTanggalLahir" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="TempatTanggalLahir" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Agama</label>
            <input asp-for="Agama" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="Agama" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Alamat</label>
            <textarea asp-for="Alamat" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 h-24"></textarea>
            <span asp-validation-for="Alamat" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label class="block font-medium text-gray-700">Status Sync</label>
            <input asp-for="StatusSync" type="text" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2" />
            <span asp-validation-for="StatusSync" class="text-sm text-red-500"></span>
        </div>

        <div class="text-right">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Simpan</button>
        </div>
    </form>
</div>