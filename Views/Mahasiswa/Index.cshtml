@model List<siakad_pasim.Models.Dbs.Mahasiswa>

<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-8 lg:px-16">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Daftar Mahasiswa</h1>
            <a asp-action="Create" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
                + Tambah Mahasiswa
            </a>
        </div>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 space-y-2 sm:space-y-0">
            <input id="searchInput" type="text" placeholder="Cari nama..."
                   class="w-full sm:w-1/3 px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:ring-blue-300" />

            <select id="entriesPerPage" class="px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:ring-blue-300">
                <option value="10">10 data</option>
                <option value="15">15 data</option>
                <option value="All">Semua</option>
            </select>
        </div>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table id="mahasiswaTable" class="min-w-full table-auto">
                <thead class="bg-gray-100 text-gray-700 text-left text-sm uppercase">
                    <tr>
                        <th class="px-6 py-4">Nama</th>
                        <th class="px-6 py-4">NIM</th>
                        <th class="px-6 py-4">Jenis Kelamin</th>
                        <th class="px-6 py-4">Program Studi</th>
                        <th class="px-6 py-4">Tanggal Masuk</th>
                        <th class="px-6 py-4 text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody id="tableBody" class="text-gray-700 text-sm">
                    @foreach (var m in Model)
                    {
                        <tr class="border-b hover:bg-gray-50 transition">
                            <td class="px-6 py-3">
                                <a asp-action="Details" asp-route-id="@m.Id" class="text-blue-600 hover:underline font-medium">
                                    @m.Nama
                                </a>
                            </td>
                            <td class="px-6 py-3">@m.NIM</td>
                            <td class="px-6 py-3">@m.JenisKelamin</td>
                            <td class="px-6 py-3">@m.ProgramStudi</td>
                            <td class="px-6 py-3">@m.TanggalMasuk.ToString("dd-MM-yyyy")</td>
                            <td class="px-6 py-3 text-center space-x-2">
                                <a asp-action="Edit" asp-route-id="@m.Id" class="text-blue-500 hover:underline">Edit</a>
                                <a asp-action="Delete" asp-route-id="@m.Id" class="text-red-500 hover:underline">Hapus</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
