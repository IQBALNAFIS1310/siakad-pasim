@model siakad_pasim.Models.Dbs.Mahasiswa

@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<h2 class="text-2xl font-semibold mb-6">Edit Mahasiswa @Model.Id</h2>

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@TempData["Error"]</span>
        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.remove();">
            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 20 20">
                <title>Close</title>
                <path d="M14.348 5.652a1 1 0 00-1.414-1.414L10 7.172 7.066 4.238a1 1 0 10-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 001.414 1.414L10 12.828l2.934 2.934a1 1 0 001.414-1.414L11.414 10l2.934-2.934z" />
            </svg>
        </button>
    </div>
}

<div class="bg-white rounded-lg shadow p-6">
    <form asp-action="@action" method="post" class="space-y-6">
        @Html.HiddenFor(m => m.Id)


        <div>
            <label asp-for="NIM" class="block font-medium mb-1 text-gray-700">NIM</label>
            <input asp-for="NIM" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="NIM" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="NIK" class="block font-medium mb-1 text-gray-700">NIK</label>
            <input asp-for="NIK" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="NIK" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Nama" class="block font-medium mb-1 text-gray-700">Nama</label>
            <input asp-for="Nama" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Nama" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="ProgramStudi" class="block font-medium mb-1 text-gray-700">Program Studi</label>
            <input asp-for="ProgramStudi" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="ProgramStudi" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="TanggalMasuk" class="block font-medium mb-1 text-gray-700">Tanggal Masuk</label>
            <input asp-for="TanggalMasuk" type="date" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="TanggalMasuk" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="StatusMahasiswa" class="block font-medium mb-1 text-gray-700">Status Mahasiswa</label>
            <input asp-for="StatusMahasiswa" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="StatusMahasiswa" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="JenisPendaftaran" class="block font-medium mb-1 text-gray-700">Jenis Pendaftaran</label>
            <input asp-for="JenisPendaftaran" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="JenisPendaftaran" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="BiayaMasuk" class="block font-medium mb-1 text-gray-700">Biaya Masuk</label>
            <input asp-for="BiayaMasuk" type="number" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="BiayaMasuk" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="JenisKelamin" class="block font-medium mb-1 text-gray-700">Jenis Kelamin</label>
            <select asp-for="JenisKelamin" class="w-full border border-gray-300 rounded px-3 py-2 bg-white">
                <option value="">-- Pilih --</option>
                <option value="L">Laki-laki</option>
                <option value="P">Perempuan</option>
            </select>
            <span asp-validation-for="JenisKelamin" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="TempatTanggalLahir" class="block font-medium mb-1 text-gray-700">Tempat, Tanggal Lahir</label>
            <input asp-for="TempatTanggalLahir" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="TempatTanggalLahir" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Agama" class="block font-medium mb-1 text-gray-700">Agama</label>
            <input asp-for="Agama" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="Agama" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Alamat" class="block font-medium mb-1 text-gray-700">Alamat</label>
            <textarea asp-for="Alamat" rows="4" class="w-full border border-gray-300 rounded px-3 py-2"></textarea>
            <span asp-validation-for="Alamat" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="StatusSync" class="block font-medium mb-1 text-gray-700">Status Sync</label>
            <input asp-for="StatusSync" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="StatusSync" class="text-sm text-red-600"></span>
        </div>

        <div>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
                Simpan
            </button>
        </div>
    </form>
</div>
