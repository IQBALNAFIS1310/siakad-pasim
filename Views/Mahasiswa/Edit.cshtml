@model siakad_pasim.Models.Dbs.Mahasiswa

@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<h2>Edit Mahasiswa @(Model.Id.ToString())</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card">
    <div class="card-body">
        <form asp-action="@action" method="post">
            @Html.HiddenFor(m => m.Id)

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">NIM</label>
                <div class="col-sm-10">
                    <input asp-for="NIM" class="form-control" />
                    <span asp-validation-for="NIM" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">NIK</label>
                <div class="col-sm-10">
                    <input asp-for="NIK" class="form-control" />
                    <span asp-validation-for="NIK" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Nama</label>
                <div class="col-sm-10">
                    <input asp-for="Nama" class="form-control" />
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Program Studi</label>
                <div class="col-sm-10">
                    <input asp-for="ProgramStudi" class="form-control" />
                    <span asp-validation-for="ProgramStudi" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Tanggal Masuk</label>
                <div class="col-sm-10">
                    <input asp-for="TanggalMasuk" class="form-control" type="date" />
                    <span asp-validation-for="TanggalMasuk" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Status Mahasiswa</label>
                <div class="col-sm-10">
                    <input asp-for="StatusMahasiswa" class="form-control" />
                    <span asp-validation-for="StatusMahasiswa" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Jenis Pendaftaran</label>
                <div class="col-sm-10">
                    <input asp-for="JenisPendaftaran" class="form-control" />
                    <span asp-validation-for="JenisPendaftaran" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Biaya Masuk</label>
                <div class="col-sm-10">
                    <input asp-for="BiayaMasuk" class="form-control" type="number" />
                    <span asp-validation-for="BiayaMasuk" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Jenis Kelamin</label>
                <div class="col-sm-10">
                    <select asp-for="JenisKelamin" class="form-select">
                        <option value="">-- Pilih --</option>
                        <option value="L">Laki-laki</option>
                        <option value="P">Perempuan</option>
                    </select>
                    <span asp-validation-for="JenisKelamin" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Tempat, Tanggal Lahir</label>
                <div class="col-sm-10">
                    <input asp-for="TempatTanggalLahir" class="form-control" type="text" />
                    <span asp-validation-for="TempatTanggalLahir" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Agama</label>
                <div class="col-sm-10">
                    <input asp-for="Agama" class="form-control" />
                    <span asp-validation-for="Agama" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Alamat</label>
                <div class="col-sm-10">
                    <textarea asp-for="Alamat" class="form-control" style="height: 100px;"></textarea>
                    <span asp-validation-for="Alamat" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Status Sync</label>
                <div class="col-sm-10">
                    <input asp-for="StatusSync" type="text" class="form-control" />
                    <span asp-validation-for="StatusSync" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>
