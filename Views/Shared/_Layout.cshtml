<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - siakad_pasim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/siakad_pasim.styles.css" asp-append-version="true" />
    <link href="" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">siakad_pasim</a>

                <!-- Sidebar toggle on small screen -->
                <button class="btn btn-outline-secondary d-lg-none me-2" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle sidebar">
                    ☰   
                </button>

                <!-- Navbar content -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Layout Content -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-12 col-md-3 col-lg-2 collapse d-md-block sidebar" id="sidebarMenu">
                <h3>Dashboard</h3>
                <ul>
                    <li class="menu-item">👤 Profil</li>
                    <li class="menu-item">
                        🎓 Mahasiswa
                        <ul class="submenu">
                            <li>Daftar Mahasiswa</li>
                            <li>Daftar Mahasiswa Hapus</li>
                        </ul>
                    </li>
                    <li class="menu-item">🧑‍🏫 Dosen</li>
                    <li class="menu-item">📝 Perkuliahan</li>
                    <li class="menu-item">💼 Pelengkap</li>
                    <li class="menu-item">📊 Rekapitulasi</li>
                    <li class="menu-item">⚙️ Pengaturan</li>
                    <li class="menu-item">📤 Export Data</li>
                    <li class="menu-item">🔄 Sinkronisasi</li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-12 col-md-9 col-lg-10">
                <main role="main" class="pb-3 mt-2">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - siakad_pasim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
