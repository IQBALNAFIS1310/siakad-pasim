<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Siakad Pasim</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="~/favicon.ico" rel="icon">
    <!--untuk icon tailwind-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Nunito:wght@300;400;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-100 font-sans">

    <!-- Header -->
    <header class="fixed top-0 w-full bg-white shadow z-50">
        <div class="flex items-center justify-between px-4 py-3">
            <a href="index.html" class="flex items-center space-x-2">
                <img src="~/assets/Logos/pasimlogo.png" alt="Logo" class="h-10">
                <span class="hidden lg:inline-block text-xl font-bold">SIAKAD PASIM</span>
            </a>
            <button id="hamburgerBtn" class="text-gray-600 lg:hidden focus:outline-none">
                <i class="bi bi-list text-2xl"></i>
            </button>
        </div>
    </header>

    <!-- Sidebar -->
    <aside id="sidebar" class="fixed top-16 left-0 w-64 h-screen bg-white shadow-md p-4 hidden lg:block transition-transform duration-300 transform -translate-x-full lg:translate-x-0">
        <nav>
            <ul class="space-y-2">
                <li>
                    <a asp-controller="Dashboard" asp-action="Index" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded">
                        <i class="bi bi-grid mr-2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="users-profile.html" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded">
                        <i class="bi bi-person mr-2"></i> Profile
                    </a>
                </li>
                <li>
                    <div class="space-y-1">
                        <button class="flex items-center w-full p-2 text-gray-700 hover:bg-gray-200 rounded" onclick="toggleCollapse('mahasiswa')">
                            <i class="bi bi-menu-button-wide mr-2"></i> Mahasiswa <i class="bi bi-chevron-down ml-auto"></i>
                        </button>
                        <ul id="mahasiswa" class="ml-6 hidden">
                            <li><a asp-action="Index" asp-controller="Mahasiswa" class="block p-2 text-gray-600 hover:text-gray-800">Daftar Mahasiswa</a></li>
                            <li><a href="#" class="block p-2 text-gray-600 hover:text-gray-800">Daftar Mahasiswa Hapus</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="space-y-1">
                        <button class="flex items-center w-full p-2 text-gray-700 hover:bg-gray-200 rounded" onclick="toggleCollapse('dosen')">
                            <i class="bi bi-journal-text mr-2"></i> Dosen <i class="bi bi-chevron-down ml-auto"></i>
                        </button>
                        <ul id="dosen" class="ml-6 hidden">
                            <li><a href="#" class="block p-2 text-gray-600 hover:text-gray-800">Form Elements</a></li>
                            <li><a href="#" class="block p-2 text-gray-600 hover:text-gray-800">Form Layouts</a></li>
                            <li><a href="#" class="block p-2 text-gray-600 hover:text-gray-800">Form Editors</a></li>
                            <li><a href="#" class="block p-2 text-gray-600 hover:text-gray-800">Form Validation</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="ml-0 lg:ml-64 pt-20 px-4">
        @RenderBody()
    </main>

    <!-- Back to Top -->
    <a href="#" class="fixed bottom-4 right-4 bg-blue-600 text-white p-3 rounded-full shadow hover:bg-blue-700">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <script src="~/js/site.js"></script>
</body>

</html>
